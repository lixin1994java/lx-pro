<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lxpro.mapper.UserMapper" >
  <resultMap id="BaseResultMap" type="com.lxpro.entity.User" >
    <id column="user_id" property="userId" jdbcType="BIGINT" />
    <result column="user_name" property="userName" jdbcType="VARCHAR" />
    <result column="user_pwd" property="userPwd" jdbcType="VARCHAR" />
    <result column="user_birthday" property="userBirthday" jdbcType="DATE" />
    <result column="user_email" property="userEmail" jdbcType="VARCHAR" />
    <result column="user_status" property="userStatus" jdbcType="TINYINT" />
    <result column="user_mobile" property="userMobile" jdbcType="VARCHAR" />
  </resultMap>
  <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Long" >
    select 
    *
    from user
    where user_id = #{userId,jdbcType=BIGINT}
  </select>
  <select id="userLogin" resultMap="BaseResultMap" parameterType="com.lxpro.entity.User" >
    select
    *
    from user
    where user_name = #{userName}
    AND user_pwd = #{userPwd}
  </select>
  <insert id="userRegist" useGeneratedKeys="true" keyProperty="userId" parameterType="com.lxpro.entity.User" >
    INSERT INTO user VALUES (
      #{userName},#{userPwd},#{userBirthday},#{userEmail},#{userMobile}
    )
  </insert>
</mapper>